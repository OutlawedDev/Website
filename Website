      height: 100vh;
      margin: 0;
    }
    .game-container {
      text-align: center;
      background-color: #111;
      padding: 20px;
      border-radius: 15px;
      box-shadow: 0 0 20px rgba(255, 255, 255, 0.1);
      max-width: 600px;
      width: 100%;
    }
    h1 {
      font-size: 2.5em;
      margin-bottom: 20px;
      color: #fff;
    }
    .maze {
      display: grid;
      grid-template-columns: repeat(7, 50px);
      grid-template-rows: repeat(7, 50px);
      gap: 5px;
      margin: 20px auto;
      justify-content: center;
    }
    .cell {
      width: 50px;
      height: 50px;
      background-color: #222;
      display: flex;
      justify-content: center;
      align-items: center;
      font-size: 1.5em;
      border-radius: 5px;
      transition: background-color 0.3s, transform 0.3s;
    }
    .cell.wall {
      background-color: #444;
      background-image: url("data:image/svg+xml,%3Csvg width='10' height='10' viewBox='0 0 10 10' fill='%23777' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='10' height='10'/%3E%3C/svg%3E");
    }
